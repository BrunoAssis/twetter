<li>
  <table class="table">
    <tbody>
      <tr>
        <%= content_tag :td, image_tag(gravatar(twet.user), :class => 'img-rounded'), :style => 'width: 60px;' %>
        <td>
          <%= content_tag :strong, twet.user.name, :class => 'pull-left' %>
          <%= content_tag :small, "@"+twet.user.username, :class => 'text-muted pad-10' %>
          <%= content_tag :small, twet.created_at.strftime("%b %-d"), :class => 'text-muted pull-right' %>
          <div class="clearfix"></div>
          <%= content_tag :p, twet.content %>
        </td>
      </tr>
    </tbody>
  </table>
</li>
